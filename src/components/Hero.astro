---
// src/components/Hero.astro
import { getEntry } from 'astro:content';

const homeEntry = await getEntry('home', 'home');

if (!homeEntry) {
    throw new Error('Home page content (home.md) not found in the "home" collection.');
}
const data = homeEntry.data;

const {
    full_name, 
    pro_title, 
    email, 
    location, 
    linkedin_url, 
    intro_headline, 
    profile_image,
    highlights,
    intro_body
} = data;

// üß† Parse the title
// Format: "[Client-Obsessed, People-First] Product Leader"
let rotatingWords = ["Client-Obsessed"]; // Default fallback
let staticTitle = pro_title;

const match = pro_title.match(/^\[(.*?)\]\s*(.*)$/);
if (match) {
    rotatingWords = match[1].split(',').map(s => s.trim());
    staticTitle = match[2];
}
---

<section id="hero" class="hero-section">
    <div class="hero-card">
        <div class="hero-image-col" style={`--bg-image: url('${profile_image}');`}>
            {profile_image && (
                <img 
                    src={profile_image} 
                    alt={`Profile picture of ${full_name}`} 
                    class="profile-img"
                />
            )}
        </div>

        <div class="hero-content-col">
            <div class="hero-header">
                <h1 class="name">{full_name || "NAME MISSING"}</h1>
                
                <div class="title-wrapper">
                    <span class="rotating-stage">
                        {rotatingWords.map((word, index) => (
                            <span class={`rotating-word ${index === 0 ? 'active' : ''}`}>
                                {word}
                            </span>
                        ))}
                    </span>
                    <span class="static-text">{staticTitle}</span>
                </div>
                
                <div class="location-tag">üìç {location || "Location N/A"}</div>
            </div>

            <div class="action-buttons">
                <a href={`mailto:${email}`} class="btn-connect">Let's Connect! ‚úâÔ∏è</a>
                {linkedin_url && (
                    <a href={linkedin_url} target="_blank" rel="noopener noreferrer" class="btn-linkedin">
                        <img src="/images/uploads/linkedin-logo.png" alt="LinkedIn" class="linkedin-icon" />
                    </a>
                )}
            </div>

            <hr class="divider">

            <div class="introduction">
                <h2>{intro_headline || "Hello!"}</h2>
                <p class="intro-text">{intro_body || ""}</p>
            </div>

            {highlights && (
                <div class="highlights-grid">
                    {highlights.map((card) => (
                        <div class="highlight-card">
                            <span class="card-icon">{card.icon}</span>
                            <h3 class="card-value">{card.value}</h3>
                            <p class="card-title">{card.title}</p>
                        </div>
                    ))}
                </div>
            )}
        </div>
    </div>
</section>

<script>
    // ‚öôÔ∏è Vertical Scroll Logic
    document.addEventListener('DOMContentLoaded', () => {
        const words = document.querySelectorAll('.rotating-word');
        if (words.length <= 1) return;

        let currentIndex = 0;

        setInterval(() => {
            const currentWord = words[currentIndex];
            // Calculate next index (loop back to 0 at end)
            const nextIndex = (currentIndex + 1) % words.length;
            const nextWord = words[nextIndex];

            // 1. Slide current UP and OUT
            currentWord.classList.remove('active');
            currentWord.classList.add('exit');

            // 2. Prepare next word (ensure it's below) and Slide UP and IN
            nextWord.classList.add('active');

            // 3. Cleanup: After animation finishes, remove 'exit' class
            // so the word resets to the bottom position for its next turn
            setTimeout(() => {
                currentWord.classList.remove('exit');
            }, 600); // Matches CSS transition duration

            currentIndex = nextIndex;
        }, 3000); // Change every 3 seconds
    });
</script>

<style>
