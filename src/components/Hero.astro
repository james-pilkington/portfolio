---
// src/components/Hero.astro
import { getEntry } from 'astro:content';

// 1. Fetch the data
const homeEntry = await getEntry('home', 'home');

if (!homeEntry) {
    throw new Error('Home page content (home.md) not found in the "home" collection.');
}
const data = homeEntry.data;

const {
    full_name, 
    pro_title, 
    phone, 
    email, 
    location, 
    linkedin_url, 
    intro_headline, 
    profile_image,
    highlights
} = data;
---

<section id="hero" class="hero-section">

    {profile_image && (
        <div class="profile-image-container">
            <img 
                src={profile_image} 
                alt={`Profile picture of ${full_name}`} 
                class="profile-img"
            />
        </div>
    )}

    <div class="hero-header">
        <h1 class="name">{full_name || "NAME MISSING"}</h1>
        <p class="title">{pro_title || "TITLE MISSING"}</p>
    </div>

    <div class="contact-info">
        <h2 class="section-title">Connect with Me</h2>
        <ul class="contact-list">
            <li>
                <span class="label">Phone:</span>
                <a href={`tel:${phone}`}>{phone || "N/A"}</a>
            </li>
            <li>
                <span class="label">Email:</span>
                <a href={`mailto:${email}`}>{email || "N/A"}</a>
            </li>
            <li>
                <span class="label">Location:</span>
                {location || "NAME MISSING"}
            </li>
            <li>
                <span class="label">LinkedIn:</span>
                <a href={linkedin_url || "#"} target="_blank" rel="noopener noreferrer">
                    Connect on LinkedIn
                </a>
            </li>
        </ul>
    </div>

    <hr class="divider">

    <div class="introduction">
        <h2>{intro_headline || "Hello! I'm James"}</h2>
        
        <p>Welcome to my resume website! Here, you'll find key highlights of my experience, the tools I excel with, professional references, and a portfolio of my work. For a more in-depth look, visit my LinkedIn. </p>

        <p>Iâ€™m a **results-driven player-coach Manager** with a passion for product and customer experience. With over 15 years of experience in client-facing technical rolesâ€”five of which have been increasingly focused on product managementâ€”I specialize in leading teams, driving product success, and delivering impactful results.</p>
        
        <p>I thrive on collaborating with both internal and external stakeholders, ensuring solutions align closely with client needs and use cases. Known for my ability to quickly grasp technical concepts, I leverage my skills to empower teams and drive success with energy and enthusiasm. Having worked in diverse cultural settings, Iâ€™ve developed strong communication and adaptability skills, enabling me to engage effectively with a wide range of audiences. Take a look around to learn more about my work!</p>
    </div>

    <hr class="divider">

    {highlights && (
        <div class="highlights-grid">
            {highlights.map((card) => (
                <div class="highlight-card">
                    <span class="card-icon">{card.icon}</span>
                    <h3 class="card-value">{card.value}</h3>
                    <p class="card-title">{card.title}</p>
                </div>
            ))}
        </div>
    )}

</section>

<style>
/* ðŸŽ¨ Basic Styling to make it look organized */

.hero-section {
    max-width: 900px;
    margin: 4rem auto;
    padding: 2rem;
    font-family: sans-serif; 
}

/* Added styling for the profile image */
.profile-image-container {
    text-align: center;
    margin-bottom: 2rem;
}

.profile-img {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid #007bff;
}

.hero-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid #eee;
}

.name {
    font-size: 3em;
    font-weight: 900;
    color: #111;
    margin: 0 0 0.25rem 0;
}

.title {
    font-size: 1.5em;
    font-weight: 500;
    color: #555;
    margin: 0;
}

.contact-info {
    margin-bottom: 2rem;
}

