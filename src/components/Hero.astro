}

/* üé≠ THE STAGE: CSS Grid Trick for Fixed Width */
.rotating-stage {
    display: inline-grid;
    vertical-align: bottom;
    /* This ensures the container height matches the text exactly */
    height: 1.2em; 
    overflow: hidden; /* Hides words as they slide out */
    color: var(--color-primary); /* üîµ BLUE COLOR HIGHLIGHT */
    font-weight: 700;
    text-align: right
}

/* üèÉ‚Äç‚ôÇÔ∏è THE WORDS: Stacked on top of each other */
.rotating-word {
    grid-area: 1 / 1; /* All words occupy the exact same space */
    opacity: 0;
    transform: translateY(100%); /* Start position: Below */
    transition: transform 0.6s cubic-bezier(0.2, 1, 0.3, 1), opacity 0.6s ease;
    white-space: nowrap;
}

/* State: Active (Visible) */
.rotating-word.active {
    opacity: 1;
    transform: translateY(0); /* Center */
}

/* State: Exit (Leaving Upwards) */
.rotating-word.exit {
    opacity: 0;
    transform: translateY(-100%); /* Move Up */
}

.location-tag {
